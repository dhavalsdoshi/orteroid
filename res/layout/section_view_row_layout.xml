<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/idea_menu"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <Button
            android:id="@+id/row_text"
            android:layout_width="500dip"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:textSize="20dip"
            android:background="@drawable/sticky"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="editIdea" android:longClickable="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/votes"
            android:onClick="voteForIdea"
            android:layout_alignRight="@+id/row_text" android:layout_alignBottom="@+id/row_text"
            android:layout_margin="1dp" android:clickable="true" android:padding="6dip"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:src="@drawable/delete_icon" android:layout_alignLeft="@+id/row_text" android:layout_alignParentTop="true"/>


</RelativeLayout>