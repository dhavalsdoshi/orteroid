<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <EditText
            android:layout_width="192dip"
            android:layout_height="39dip"
            android:hint="Enter Board name"
            android:id="@+id/boardKey" android:layout_gravity="center"
            android:layout_alignRight="@+id/boardId" android:layout_alignParentTop="true"
            android:layout_marginTop="53dp"/>

    <EditText
            android:layout_width="192dip"
            android:hint="Enter Board id"
            android:id="@+id/boardId"
            android:layout_height="39dp"
            android:layout_weight="1"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="139dp"/>
</RelativeLayout>