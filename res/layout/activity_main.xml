<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:background="@drawable/board"
                android:padding="5dp"
                android:focusable="false">
    <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="@string/app_details"
            android:id="@+id/heading"
            android:textStyle="bold"
            android:textColor="@android:color/holo_purple"
            android:textSize="20dip"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    <Button
            android:id="@+id/viewTestBoard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="20dip"
            android:text="@string/option1"
            android:onClick="viewDemo"
            android:background="#ffff88"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:rotation="0"/>
    <Button
            android:id="@+id/viewBoard"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:textSize="20dip"
            android:text="@string/option2"
            android:onClick="viewBoard"
            android:background="#10b6ff"
            android:textColor="@android:color/black"
            android:layout_marginTop="180dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:rotation="1"/>
    <Button
            android:id="@+id/faq"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:textSize="20dip"
            android:text="@string/option3"
            android:onClick="faq"
            android:background="#ffb25a"
            android:textColor="@android:color/black"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp"
            android:rotation="-1"/>
    <Button
            android:id="@+id/feedback"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textSize="20dip"
            android:text="@string/option4"
            android:onClick="feedback"
            android:background="#bdef6b"
            android:textColor="@android:color/black"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="30dp"
            android:rotation="-3"/>
</RelativeLayout>